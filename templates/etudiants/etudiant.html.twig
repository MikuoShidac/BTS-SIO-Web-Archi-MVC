{% extends 'base.html.twig' %}

{% block title %}Etudiants{% endblock %}

{% block content %}
    <h1>Liste des étudiants</h1>
    {% for etudiant in etudiants %}
        N°: {{ etudiant.getIdEtudiant }} Prénom: {{ etudiant.getPrenom }}
        Nom: {{ etudiant.getNom }} Pseudo: {{ etudiant.getLogin }}
        <a href="/modifier/{{ etudiant.getIdEtudiant }}">Modifier</a>
        <br><a href="/delete/{{ etudiant.getIdEtudiant }}">Supprimer</a>
        <br><br>
    {% endfor %}
    <br><h3><a href="/ajouter">Ajouter un étudiant</a></h3>
{% endblock %}